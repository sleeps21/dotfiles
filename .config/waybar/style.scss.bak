// Import Colors
@import "/home/sleeps/.cache/wal/colors.scss";

/* -----------------------------------------------------
 * General 
 * ----------------------------------------------------- */
* {
  font-family: "Fira Sans Semibold", FontAwesome, Roboto, Helvetica, Arial,
    sans-serif;
  border: none;
  border-radius: 0px;
}

window#waybar {
  background-color: rgba(0, 0, 0, 0.8);
  border-bottom: 0px solid $color7;
  background: transparent;
  transition-property: background-color;
  transition-duration: 0.5s;
}

/* -----------------------------------------------------
 * Workspaces 
 * ----------------------------------------------------- */
#workspaces {
  background: $color1;
  margin: 2px 20px 3px 1px;
  padding: 0px 1px;
  border-radius: 15px;
  border: 3px solid;
  font-weight: bold;
  font-style: normal;
  opacity: 0.8;
  font-size: 16px;
  color: $color7;
  border-color: $foreground;
}

#workspaces button {
  padding: 0px 5px;
  margin: 4px 3px;
  border-radius: 15px;
  border: 0px;
  color: $color0;
  background-color: $color0;
  transition: all 0.3s ease-in-out;
  opacity: 0.4;
}

#workspaces button.active {
  color: $color0;
  background: $color0;
  border-radius: 15px;
  min-width: 40px;
  transition: all 0.3s ease-in-out;
  opacity: 1;
}

#workspaces button:hover {
  color: $color2;
  background: $color2;
  border-radius: 15px;
  opacity: 0.7;
}

/* -----------------------------------------------------
 * Window
 * ----------------------------------------------------- */
#window,
#network,
#clock,
#custom-appmenu {
  background: $color1;
  margin: 5px 15px 5px 0px;
  padding: 2px 10px 0px 10px;
  border-radius: 12px;
  color: $foreground;
  border: 3px solid $foreground;
  font-size: 16px;
  font-weight: bold;
  opacity: 0.8;
}

window#waybar.empty #window {
  background-color: transparent;
}

/* -----------------------------------------------------
 * Modules
 * ----------------------------------------------------- */
.modules-left > widget:first-child > #workspaces {
  margin-left: 0;
}

.modules-right > widget:last-child > #workspaces {
  margin-right: 0;
}

/* -----------------------------------------------------
 * Custom Quicklinks
 * ----------------------------------------------------- */
#custom-brave,
#custom-browser,
#custom-keybindings,
#custom-outlook,
#custom-filemanager,
#custom-teams,
#custom-chatgpt,
#custom-calculator,
#custom-windowsvm,
#custom-cliphist,
#custom-wallpaper,
#custom-settings,
#custom-system,
#custom-hyprshade,
#custom-hypridle,
#custom-waybarthemes {
  margin-right: 23px;
  font-size: 20px;
  font-weight: bold;
  opacity: 0.8;
  color: $color7;
}

#custom-system {
  margin-right: 15px;
}

/* -----------------------------------------------------
 * Custom Modules
 * ----------------------------------------------------- */
#custom-appmenu,
#custom-appmenuwlr {
  background-color: $color1;
  font-size: 16px;
  color: $foreground;
  border-radius: 15px;
  padding: 0px 15px 0px 10px;
  margin: 3px 15px 3px 14px;
  opacity: 0.8;
  border: 3px solid $foreground;
}

#custom-exit {
  background-color: $color1;
  font-size: 16px;
  color: $foreground;
  border-radius: 15px;
  padding: 2px 10px 0px 10px;
  margin: 3px 15px 3px 14px;
  opacity: 0.8;
  border: 3px solid $foreground;
}

#custom-filemanager {
  background-color: $color1;
  font-size: 16px;
  color: $color7;
  border-radius: 15px;
  padding: 0px 10px 0px 10px;
  margin: 3px 15px 3px 15px;
  opacity: 0.8;
  border: 3px solid $color10;
}

/* -----------------------------------------------------
 * Hardware Group
 * ----------------------------------------------------- */
#disk,
#memory,
#cpu,
#language {
  margin: 0px;
  padding: 0px;
  font-size: 16px;
  color: $color11;
}

/* -----------------------------------------------------
 * Pulseaudio
 * ----------------------------------------------------- */
#pulseaudio {
  background-color: $color1;
  border: 3px solid $color10;
  font-size: 16px;
  color: $color7;
  border-radius: 15px;
  padding: 2px 10px 0px 10px;
  margin: 5px 15px 5px 0px;
  opacity: 0.8;
}

#pulseaudio.muted {
  background-color: $color0;
  color: $color7;
}

/* -----------------------------------------------------
 * Bluetooth
 * ----------------------------------------------------- */
#bluetooth,
#bluetooth.on,
#bluetooth.connected {
  background-color: $color1;
  font-size: 16px;
  color: $color7;
  border: 3px solid $color10;
  border-radius: 15px;
  padding: 2px 10px 0px 10px;
  margin: 5px 15px 5px 0px;
  opacity: 0.8;
}

#bluetooth.off {
  background-color: $color1;
  font-size: 16px;
  color: $color9;
  border: 3px solid $color9;
  border-radius: 15px;
  padding: 2px 10px 0px 10px;
  margin: 5px 15px 5px 0px;
  opacity: 0.8;
}

/* -----------------------------------------------------
 * Battery
 * ----------------------------------------------------- */
#battery {
  background-color: $color1;
  font-size: 16px;
  font-weight: bold;
  color: $color7;
  border-radius: 15px;
  border: 3px solid $foreground;
  padding: 2px 15px 0px 10px;
  margin: 5px 15px 5px 0px;
  opacity: 0.8;
}

#battery.charging,
#battery.plugged {
  color: $color7;
  background-color: $color1;
}

@keyframes blink {
  to {
    background-color: $color1;
    color: $color7;
  }
}

#battery.critical:not(.charging) {
  background-color: $color1;
  color: red;
  animation-name: blink;
  animation-duration: 0.5s;
  animation-timing-function: linear;
  animation-iteration-count: infinite;
  animation-direction: alternate;
}

/* -----------------------------------------------------
 * Tray
 * ----------------------------------------------------- */
#tray {
  padding: 0px 15px 0px 0px;
}

#tray > .passive {
  -gtk-icon-effect: dim;
}

#tray > .needs-attention {
  -gtk-icon-effect: highlight;
}
